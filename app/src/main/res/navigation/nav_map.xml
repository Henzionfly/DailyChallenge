<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_map"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.kariol.dailychallenge.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/login_to_home"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.kariol.dailychallenge.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/home_to_challenge"
            app:destination="@id/challengeFragment" />
        <action
            android:id="@+id/home_to_login"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/challengeFragment"
        android:name="com.kariol.dailychallenge.MathChallengeFragment"
        android:label="fragment_challenge"
        tools:layout="@layout/fragment_math_challenge" >
        <action
            android:id="@+id/challenge_to_win"
            app:destination="@id/winFragment" />
        <action
            android:id="@+id/challenge_to_lose"
            app:destination="@id/loseFragment" />
    </fragment>
    <fragment
        android:id="@+id/winFragment"
        android:name="com.kariol.dailychallenge.WinFragment"
        android:label="fragment_win"
        tools:layout="@layout/fragment_win" >
        <action
            android:id="@+id/win_to_home"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/loseFragment"
        android:name="com.kariol.dailychallenge.LoseFragment"
        android:label="fragment_lose"
        tools:layout="@layout/fragment_lose" >
        <action
            android:id="@+id/lose_to_home"
            app:destination="@id/homeFragment" />
    </fragment>
</navigation>